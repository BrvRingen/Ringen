<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:properties="clr-namespace:Ringen.Properties"
    xmlns:t="clr-namespace:TranslationManager;assembly=TranslationManager"
    xmlns:local="clr-namespace:Ringen"
    xmlns:tb="http://www.hardcodet.net/taskbar">

    <tb:TaskbarIcon
        x:Key="NotificationIcon"
        IconSource="pack://application:,,,/Ringen;component\Resources\Images\Icon.ico"
        ToolTipText="{local:Translate MainFormTitle}">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Command="{Binding CloseNotificationIcon}" Header="{local:Translate CloseRingen}">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Ringen;component/Resources/Images/Context_Menu_Close.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>


</ResourceDictionary>